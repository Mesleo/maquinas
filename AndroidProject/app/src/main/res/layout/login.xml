<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_login"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="30dp"
        android:elevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="30dp">

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="ACCESO"-->
                <!--android:padding="7dp"-->
                <!--android:fontFamily="serif-monospace"-->
                <!--android:gravity="center_horizontal"-->
                <!--android:textSize="40dp"-->
                <!--android:textColor="#fffffa"-->
                <!--android:textStyle="bold"/>-->

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp">

            <Spinner
                android:id="@+id/spinnerUsers"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:padding="4dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/colorSecundaryLight"
                android:background="@drawable/background_spinner" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:hint="Password"
                android:padding="7dp"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:layout_below="@id/spinnerUsers"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_input"/>

            <LinearLayout
                android:id="@+id/layoutEnter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:gravity="center_horizontal"
                android:layout_below="@id/etPassword">


                <ImageButton
                    android:id="@+id/btnChangePass1"
                    android:text="Cambiar contraseÃ±a"
                    android:layout_width="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="60dp"
                    android:layout_marginRight="55dp"
                    android:textColor="#fffffa"
                    android:background="@drawable/button_chang_pass" />

                <Button
                    android:id="@+id/btnSignIn"
                    android:text="Entrar"
                    android:layout_width="140dp"
                    android:textSize="20dp"
                    android:textColor="#fffffa"
                    android:background="@drawable/button_save_ubication"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>