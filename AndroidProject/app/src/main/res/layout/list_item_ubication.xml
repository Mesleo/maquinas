<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingBottom="7dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:weightSum="2"
    android:id="@+id/layoutListItem"
    android:background="@drawable/background_list_item">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:layout_weight="0"
        android:layout_marginBottom="6dp"
        android:padding="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUbication"
            android:layout_weight="7"
            android:paddingBottom="7dp"
            android:textSize="21dp" />

        <!-- Para la versión administrador descomentar el botón 'Borrar' -->
        <Button
            android:text="Ubicación"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnUbication"
            android:visibility="gone"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:background="@drawable/button_save_ubication"
            android:layout_weight="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:weightSum="5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDate"
            android:textSize="15dp"
            android:layout_weight="3"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/tvUser"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textSize="15dp"/>

    </LinearLayout>

</LinearLayout>